@model IEnumerable<Comment>

@if (Model.Count() == 0)
{
    <div class="comment-top">
        <h4>İlk Yorumu Sen Yap</h4>
    </div>
}
else
{
    <div class="comment-top">
        <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/BlogTemplate/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUsername</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    </div>
}
