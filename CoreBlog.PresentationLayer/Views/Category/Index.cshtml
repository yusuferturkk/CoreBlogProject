@model List<Category>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><h4>Kategori Listem</h4><br />
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Kategori Açıklama</th>
            <th>Kategori Durumu</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>#</th>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td>@item.CategoryStatus</td>
                <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>

    <a href="/Category/AddCategory" class="btn btn-outline-primary">Kategori Ekle</a>
</div>